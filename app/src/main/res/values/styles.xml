<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_span">
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Transparan</item>
    </style>

    <style name="AppTheme2" parent="ThemeOverlay.MaterialComponents.BottomAppBar.Primary"/>

    <style name="AppThemeFull" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ImageMessage" parent="AppThemeFull">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppNavigation" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="sectionHeader"
        parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/line</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

